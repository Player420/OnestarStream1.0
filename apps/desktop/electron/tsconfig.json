{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "@onestar/db-sdk": ["../../../packages/onestar-db-sdk/src/index.ts"],
      "@onestar/db-sdk/*": ["../../../packages/onestar-db-sdk/src/*"]
    }
  },
  "include": [
    "main.ts",
    "preload.ts",
    "syncScheduler.ts",
    "syncHelpers.ts",
    "preload-lib/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../../packages/onestar-db-sdk" }
  ]
}
