{
  "name": "onestarstream",
  "version": "0.1.0",
  "private": true,
  "main": "electron/dist/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "dev:electron": "ONESTAR_APP_URL=http://localhost:3000 npx electron .",
    "dist": "electron-builder --mac"
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "cookie": "^1.1.1",
    "next": "16.0.3",
    "nodemailer": "^7.0.11",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^39.2.4",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.onestarstream.app",
    "mac": {
      "target": ["dmg", "pkg"],
      "category": "public.app-category.music"
    },
    "files": [
      "electron/dist/**/*",
      "package.json"
    ]
  }
